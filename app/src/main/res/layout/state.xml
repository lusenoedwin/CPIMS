<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/cardview"
app:cardCornerRadius="6dp"
app:cardElevation="7dp"
    android:screenOrientation="portrait"
android:layout_marginTop="8dp"
android:layout_marginStart="8dp"
app:cardUseCompatPadding="true"
android:layout_marginEnd="8dp"
android:layout_marginLeft="8dp"
app:cardBackgroundColor="#FAFCFD">

<RelativeLayout
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:orientation="horizontal"
    android:layout_below="@id/header">



    <ImageView
        android:id="@+id/defiledchildpic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:text="StateName: "
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:maxLines="3"
        android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:hint="Name"
        android:layout_toEndOf="@+id/name"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:maxLines="3"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/name" />

    <TextView
        android:id="@+id/dateofbirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:maxLines="3"
        android:text="REGNO: "
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/regno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:hint="RegNo"
        android:layout_toRightOf="@+id/dateofbirth"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:layout_below="@+id/state"
        android:maxLines="3"
        android:layout_marginLeft="10dp" />


    <TextView
        android:id="@+id/getresidence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Location: "
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:layout_below="@+id/regno"
        android:maxLines="3"
        android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:hint="Location"
        android:layout_toRightOf="@+id/getresidence"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:layout_below="@+id/regno"
        android:maxLines="3"
        android:layout_marginLeft="10dp" />


    <TextView
        android:id="@+id/getstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Telephone: "
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/loc"
        android:maxLines="3"
        android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:hint="Telephone"
        android:layout_toRightOf="@+id/getstatus"
        android:textColor="#EA1A05"
        android:textSize="15dp"
        android:layout_below="@+id/loc"
        android:maxLines="3"
        android:layout_marginLeft="10dp" />

    <!--        <Button-->
    <!--            android:id="@+id/btnd1"-->
    <!--            android:layout_width="wrap_content"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:text="Action"-->
    <!--            android:background="@drawable/bluebutton"-->
    <!--            android:textColor="@android:color/holo_red_dark"-->
    <!--            android:maxLines="3"  />-->

</RelativeLayout>

</androidx.cardview.widget.CardView>