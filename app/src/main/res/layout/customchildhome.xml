<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    app:cardCornerRadius="6dp"
    app:cardElevation="7dp"
    android:screenOrientation="portrait"
    android:layout_marginTop="1dp"
    android:layout_marginStart="8dp"
    app:cardUseCompatPadding="true"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    >

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:padding="1dp"
        android:orientation="horizontal"
        android:layout_below="@id/header">



        <ImageView
            android:id="@+id/childhome"
            android:layout_width="60dp"
            android:layout_height="60dp"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:text="Name: "
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:maxLines="3"
            android:layout_marginLeft="10dp" />
        <TextView
            android:id="@+id/getname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:hint="Name"
            android:layout_toEndOf="@+id/name"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:maxLines="3"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/name" />

        <TextView
            android:id="@+id/dateofbirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getname"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:maxLines="3"
            android:text="D.o.B: "
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:hint="Date of Birth"
            android:layout_toRightOf="@+id/dateofbirth"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_below="@+id/getname"
            android:maxLines="3"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/deletechild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dob"
            android:background="@drawable/icon_delete"
            android:layout_below="@+id/getname"
            android:layout_marginLeft="70dp"
            android:onClick="deleteDefiledcase"

            />

        <ImageView
            android:id="@+id/updatechild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dob"
            android:background="@drawable/icon_update"
            android:layout_below="@+id/getname"
            android:layout_marginLeft="130dp"
            android:onClick="updateDefiledcase"

            />


        <TextView
            android:id="@+id/childhome1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Childhome: "
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_below="@+id/dob"
            android:maxLines="3"
            android:layout_marginLeft="10dp" />
        <TextView
            android:id="@+id/getchildhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:hint="Name of childhome"
            android:layout_toRightOf="@+id/childhome1"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_below="@+id/dob"
            android:maxLines="3"
            android:layout_marginLeft="10dp" />


        <TextView
            android:id="@+id/reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="RegNo: "
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/childhome1"
            android:maxLines="3"
            android:layout_marginLeft="10dp" />
        <TextView
            android:id="@+id/getreg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:hint="Status"
            android:layout_toRightOf="@+id/reg"
            android:textColor="#EA1A05"
            android:textSize="15dp"
            android:layout_below="@+id/childhome1"
            android:maxLines="3"
            android:layout_marginLeft="10dp" />

        <!--        <Button-->
        <!--            android:id="@+id/btnd1"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="Action"-->
        <!--            android:background="@drawable/bluebutton"-->
        <!--            android:textColor="@android:color/holo_red_dark"-->
        <!--            android:maxLines="3"  />-->

    </RelativeLayout>

</androidx.cardview.widget.CardView>